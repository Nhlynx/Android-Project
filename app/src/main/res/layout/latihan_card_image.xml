<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivDestination"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/swiss_destination"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niesen"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_below="@id/ivDestination"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLocation"
                android:text="Amazing view can be enjoyed from above of refreshing city"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"/>
            <ImageView
                android:id="@+id/icLocation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/location"
                android:layout_below="@id/tvDescription"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"/>
            <ImageView
                android:id="@+id/priceCheck"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/price"
                android:layout_below="@id/tvDescription"
                android:layout_toRightOf="@id/tvLoc"
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"/>
            <TextView
                android:id="@+id/tvLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDescription"
                android:layout_toRightOf="@id/icLocation"
                android:text="Switzerland"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/tvPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDescription"
                android:layout_toRightOf="@id/priceCheck"
                android:text="100 / Package"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="30dp"/>
            <Button
                android:id="@+id/btnPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plan Trip Now"
                android:backgroundTint="@color/blue"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>